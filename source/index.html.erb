---
pageable: true
per_page: 2
---

<div class="articles">
  <% page_articles.each_with_index do |article, i| %>
    <%= partial('partials/article', locals: { article: article, class_names: ['no-pad-top-xs'] }) %>
  <% end %>
</div>

<div class="articles-navigation">
  <% if paginate %>
    <% if next_page %>
      <p class="pull-right"><%= link_to 'Older post â†’', next_page %></p>
    <% end %>
    <% if num_pages > 1 && prev_page %>
      <p class="pull-left"><%= link_to 'â† Newer post', prev_page %></p>
    <% end %>
  <% end %>
</div>
